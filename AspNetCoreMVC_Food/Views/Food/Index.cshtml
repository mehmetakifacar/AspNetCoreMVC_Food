@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<AspNetCoreMVC_Food.Data.Models.Food>

<h2>Food List</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Food Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    @foreach (var food in Model)
    {
        <tr>
            <th>@food.FoodId</th>
            <td>@food.Name</td>
            <td>@food.Price</td>
            <td>@food.Stock</td>
            <td>@food.Category.Name</td>
            <td><a class="btn btn-danger" asp-controller="Food" asp-action="Delete" asp-route-id="@food.FoodId">Delete</a></td>
            <td><a class="btn btn-success" asp-controller="Food" asp-action="FoodUpdate" asp-route-id="@food.FoodId">Update</a></td>
            <td><a href="#" class="btn btn-info">Details</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

<a class="btn btn-primary" asp-controller="Food" asp-action="FoodAdd">New Food</a>